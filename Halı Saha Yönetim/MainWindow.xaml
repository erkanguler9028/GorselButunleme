<Window x:Class="Halı_Saha_Yönetim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Halı_Saha_Yönetim"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Background="Gray" MinWidth="100">
            <Button Name="RezShow" Content="Ödeme İşlemleri" Height="50" Background="Blue" Foreground="White" FontWeight="Bold" Click="RezShow_Click"/>
            <Button Name="RezAttempt" Content="Rezervasyon İşlemleri" Height="50" Background="Blue" Foreground="White" FontWeight="Bold" Click="RezAttempt_Click"/>
            <Button Name="Settings" Content="Halı Saha İşlemleri" Height="50" Background="Blue" Foreground="White" FontWeight="Bold" Click="Settings_Click"/>
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Frame Background="White" Grid.Row="0" Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </DockPanel>
        
    
</Window>
